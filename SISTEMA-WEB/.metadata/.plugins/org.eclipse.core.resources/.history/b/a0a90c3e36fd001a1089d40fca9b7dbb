package daoOld;

import java.sql.PreparedStatement;
import factory.Conexao;
import model.TbContasReceber;

public class DaoContasReceber {
	
	Conexao con;
	public boolean crud_receber(String acao, TbContasReceber receber) throws Exception {
		String sql = "";
		PreparedStatement ps = con.getConexao().prepareStatement(sql);
		ps.setString(1, acao);
		ps.setInt(2, receber.getIdReceber());
		ps.setString(3, receber.getMetodoPagamento());
		ps.setBigDecimal(4, receber.getDinheiro());
		ps.setBigDecimal(5, receber.getDebito());
		ps.setBigDecimal(6, receber.getCredito());
		ps.setDate(7, receber.getDataCompra());
		ps.setDate(8, receber.getDataPrevistaReceber());		
		
		if(ps.executeUpdate() > 0) {
			return true;
		}else {
			return false;
		}
	}
}